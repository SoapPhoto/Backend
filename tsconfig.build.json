{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": ".next/production-server",
    "target": "es6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "types": [
      "node"
    ],
    "lib": [
      "es6",
      "es2015",
      "es2017"
    ],
    "paths": {
      "*": [
        "typings/*"
      ],
      "@server/*": [
        "src/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@typings/*": [
        "typings/*"
      ]
    },
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules", "test", "**/*spec.ts", "pages/**/*"]
}
