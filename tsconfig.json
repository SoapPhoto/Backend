{
  "compilerOptions": {
    "module": "esnext",
    "jsx": "preserve",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2016",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "strict": true,
    "pretty": true,
    "types": [
      "react",
      "node"
    ],
    "lib": [
      "es6",
      "es2015",
      "es2017",
      "dom"
    ],
    "paths": {
      "*": [
        "typings/*"
      ],
      "@server/*": [
        "src/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@typings/*": [
        "typings/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "pages/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "server",
    "**/*.spec.ts"
  ]
}
