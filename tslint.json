{
  "extends": ["tslint:recommended", "tslint-config-airbnb", "tslint-react", "tslint-react-hooks"],
  "rules": {
    "align": [true, "parameters", "members", "elements"],
    "jsx-no-lambda": [false],
    "jsx-no-multiline-js": [false],
    "jsx-boolean-value": ["never"],
    "max-classes-per-file": [true, 4],
    "variable-name": [true, "allow-leading-underscore", "allow-pascal-case", "allow-snake-case"],
    "object-literal-sort-keys": false,
    "max-line-length": [true, 120],
    "import-name": [false],
    "no-boolean-literal-compare": false,
    "no-console": [
      false,
      "log",
      "error",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ]
  },
  "linterOptions": {
    "exclude": [
      "node_modules",
      ".next",
      "dist",
      "test"
    ]
  }
}
